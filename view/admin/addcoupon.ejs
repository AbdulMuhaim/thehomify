<%- include('../layouts&partials/admin/header.ejs') %>

<div style="display: flex;">

<div style="margin-top: 100px; width:100%">

<h4 class="card-title" style="text-align: center; font-size: 28px; font-weight: bold; color: #ffffff; text-transform: uppercase; letter-spacing: 2px; margin-bottom: 20px;">Add Coupon </h4>

<div class="col-md-6 grid-margin stretch-card" style="margin-left: 20%;">
                <div class="card">
                  <div class="card-body">
                    
                    
                    <form class="forms-sample"  method="post" action="/admin/addCoupon">
                      <div class="form-group row">
                        <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Coupon ID:</label>
                        <div class="col-sm-9">
                          
                          <input type="text" class="form-control" id="exampleInputUsername2" name="couponId" placeholder="coupon code" required>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Discount</label>
                        <div class="col-sm-9">
                          <input type="number" class="form-control" name="discount" id="exampleInputEmail2" placeholder="Discount" required>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label for="exampleInputMobile" class="col-sm-3 col-form-label">Minimum Purchase</label>
                        <div class="col-sm-9">
                          <input type="text" class="form-control" id="exampleInputMobile" name="minPurchase" placeholder="Minimmum purchase">
                        </div>
                      </div>
                      <div class="form-group row">
                        <label for="exampleInputPassword2" class="col-sm-3 col-form-label">Maximum Limit</label>
                        <div class="col-sm-9">
                           
                          <input type="number" class="form-control" name="maxLimit" id="exampleInputPassword2" placeholder="Maximum limit" >
                        </div>
                      </div>
                      <div class="form-group row">
                        <label for="exampleInputConfirmPassword2" class="col-sm-3 col-form-label">Expiry date</label>
                        <div class="col-sm-9">
                         
                          <input type="date" class="form-control" name="expDate" id="exampleInputConfirmPassword2" placeholder="exp date" required>
                        </div>
                      </div>
    
                      <% if(couponStatus){ %>
                    <div class="alert alert-danger text-center mb-3"><%= couponStatus %></div>
                     <% }else{ %>

                   <% } %>
                     
                      <button type="submit" class="btn btn-primary mr-2">Submit</button>
                      <button class="btn btn-dark">Cancel</button>
                    </form>
                  </div>
                </div>
              </div>
          </div>
       </div>


<%- include('../layouts&partials/admin/footer.ejs') %>
