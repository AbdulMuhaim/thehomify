<%- include('../layouts&partials/admin/header.ejs') %>

<div class="col-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">

      
      <form class="form-inline" method="post" action="/admin/editcategory/<%= category._id %>">

        <label class="sr-only" for="inlineFormInputName2">Category Name</label>
        <input name="name" type="text" class="form-control mb-2 mr-sm-2" id="inlineFormInputName2" required value="<%= category.name %>">

        <button type="submit" class="btn btn-gradient-primary mb-2">Update Category</button>
      </form>
    </div>
  </div>
</div>


