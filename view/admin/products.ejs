<%- include('../layouts&partials/admin/header.ejs') %>

<div class="col-lg-6 grid-margin stretch-card" style="width: 100%;" >
    <div class="card">
      <div class="card-body" style="overflow: auto;">

    <a style="text-decoration: none;" href="/admin/addproducts"><button class="btn btn-primary">Add Products</button></a>

        <table class="table">

          <thead>
            <tr>
              <th>S.no</th>
              <th>Product name</th>
              <th>Category</th>
               <th>Brand</th>
              <th>Image</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Status</th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% for(let i = 0 ; i < product.length ; i++){ %>
             <tr> 
               <td><%=[i+1] %></td>
               <td><%= product[i].name %></td>
               <!-- <td><%= product[i].description %></td> -->
               <td><%= product[i].categoryid.name %></td>
               <td><%= product[i].brand  %></td>
               <td> <img src="<%= product[i].image[0] %>" alt="<%= product[i].image %>" width="50px" height="50px" > </td>
               <td><%= product[i].price  %></td>
               <td><%= product[i].quantity  %></td>
               <td><%= product[i].status  %></td>

               <% if( product[i].status === true){
                
                %>
                <td><a href="/admin/blockproduct/<%= product[i]._id %>"><button class="btn btn-outline-primary">Unlist</button></a></td>

              <%

              }else{

                %>
                <td><a href="/admin/unblockproduct/<%= product[i]._id %>"><button class="btn btn-outline-primary">List</button></a></td>
              
                <%
              }

              %>

               <td><a href="/admin/editproduct/<%= product[i]._id %>"><button class="btn btn-outline-primary">Edit</button></a></td>
             </tr>
             <% } %>
 
           </tbody>
         
        </table>
      </div>
    </div>
  </div>


